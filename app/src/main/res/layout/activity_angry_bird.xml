<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6FA"
    tools:context=".AngryBird">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/trailerangrybird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:videoId="QRmKa7vvct4"
        app:autoPlay="true"
        app:showYouTubeButton="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#093B51"
        android:padding="20dp"
        android:text="Angry Bird"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="338dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#E6E6FA"
            android:text="The Angry Birds Movie (atau disebut Angry Birds) adalah film komedi animasi komputer tahun 2016 berdasarkan seri permainan video Rovio Entertainment dengan nama yang sama, diproduksi oleh Columbia Pictures dan Rovio Animation, dan didistribusikan oleh Sony Pictures Releasing. Film ini disutradarai oleh Clay Kaytis dan Fergal Reilly dalam debut penyutradaraan mereka dan ditulis oleh Jon Vitti. Film ini menampilkan suara Jason Sudeikis, Josh Gad, Danny McBride, Bill Hader, dan Peter Dinklage."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:background="@drawable/angrybird"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        tools:src="android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="20sp"
            android:textStyle="bold"

            android:text="Angry Bird"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="18sp"
            android:maxLines="2"
            android:text="Rating    : 7.3"/>

    </LinearLayout>
    </LinearLayout>



</LinearLayout>